# A sample Gemfile
source "https://rubygems.org"

gem "sinatra"
gem "heroku", :require => false
gem 'thin', :require => false

group :development do
  gem 'shotgun', :require => false
end

group :test do
  gem 'minitest'
  gem 'minitest-reporters'
  gem 'capybara'
  gem 'capybara_minitest_spec'
end

